@require "variables"

// *
//     font-family custom-theme-font
    
a
    color text-color
    text-decoration none
    font-family custom-theme-font

.container-banner
    padding-top 15px
    padding-left 23px
    background linear-gradient(-90deg, #2d499e, #35a987)
    color text-color
    width 100%
    height 300px
    flex-shrink 0

.profile-image
    width 80px
    height 80px
    border-radius 5px
    box-shadow 0 8px 10px 0 rgba(0, 0, 0, 0.07), 0 0 5px 0 rgba(0, 0, 0, 0.23)

.profile-header
    align-content center
    align-items center
    flex 1
.profile-banner-info
    padding 25px
    > h4
        font-size 27px
        font-weight 900
        line-height 1.19
        font-family custom-theme-font
        color text-color

.profile-banner-info-subheading
    font-size 18px
    line-height 1.33
    letter-spacing normal 
    color profile-caption-text
    font-family custom-theme-font
.small-text
    font-size 16px
    line-height 1.5
    color profile-caption-text
    font-family custom-theme-font
    
