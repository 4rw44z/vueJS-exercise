@require'variables'

.subcard-Column
    flex-shrink 1
    flex-wrap wrap

.small-column-text
    font-size 11px
    font-weight bold
    line-height 2.18
    text-align right
    color small-column-text-color
    margin 5px 10px 4px 0px

.sub-column-container
    flex-shrink 1
    flex-wrap wrap
    border-radius 15px
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.06), 0 0 1px 0 rgba(0, 0, 0, 0.27)
    background-color: text-color
    margin: 15px

.subcolumn-icon
    margin 8px 0 5px 12px

.subcolumn-card-text
    margin 5px 11px
    font-size footer-font-text
    line-height 1.71
    color footer-text-color

.skill-list
    flex-wrap: wrap